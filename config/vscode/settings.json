{
  // core
  "files.eol": "\n",
  "http.proxyStrictSSL": false,
  "redhat.telemetry.enabled": false,

  // editor
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "line",
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 100,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "editor.tabFocusMode": true,
  "editor.rulers": [120],
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
"editor.mouseWheelZoom": true,
  "editor.minimap.renderCharacters": false,
  "editor.bracketPairColorization.enabled": true, "editor.guides.bracketPairs": "active",

  // terminal
  "terminal.integrated.tabStopWidth": 1,

  // diff
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
"diffEditor.experimental.useTrueInlineView": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.location": "bottom",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.tips.enabled": false,

  // ui colors
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
},

  // misc
  "chat.commandCenter.enabled": false,
  "github.copilot.chat.agent.currentEditorContext.enabled": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "nestor.agentMode.autoApprovableCommandsList": [],

  // window
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.density.editorTabHeight": "compact",

  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,

  // gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.recentChange.command": "gitlens.toggleFileBlame",

  // dotnet / csharp
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.useModernNet": true,
  "dotnet.formatting.organizeImportsOnFormat": true,
  "[csharp]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
  },

  // json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // emmet
  "emmet.triggerExpansionOnTab": true,

  // vim core
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.vimrc",
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<BS>"],
      "commands": ["extension.vim_ctrl+o"],
      "silent": true
    },
    // Buffer navigation
    {
      "before": ["<Tab>"],
      "commands": [{"command": "workbench.action.nextEditorInGroup"}]
    },
    {
      "before": ["<S-Tab>"],
      "commands": [{"command": "workbench.action.previousEditorInGroup"}]
    },
    // Save and format
    {
      "before": ["<leader>", "w"],
      "commands": [{"command": "workbench.action.files.save"}]
    },
    {
      "before": ["<leader>", "o", "i"],
      "commands": [{"command": "editor.action.organizeImports"}]
    },
    {
      "before": ["<leader>", "o", "a"],
      "commands": [
        {"command": "editor.action.formatDocument"},
        {"command": "editor.action.organizeImports"}
      ]
    },
    {
      "before": ["<leader>", "o", "c"],
      "commands": [{"command": "editor.action.formatDocument"}]
    },
    // Redo
    {
      "before": ["U"],
      "commands": [{"command": "redo"}]
    },
    // Split windows
    {
      "before": ["<leader>", "v"],
      "commands": [{"command": "workbench.action.splitEditorRight"}]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [{"command": "workbench.action.splitEditorDown"}]
    },
    // File explorer
    {
      "before": ["<leader>", "e"],
      "commands": [{"command": "workbench.files.action.focusFilesExplorer"}]
    },
    // Quick fix
    {
      "before": ["<leader>", "a"],
      "commands": [{"command": "editor.action.quickFix"}]
    },
    // Hover
    {
      "before": ["<leader>", "k"],
      "commands": [{"command": "editor.action.showHover"}]
    },
    // Navigate back
    {
      "before": ["<C-b>"],
      "commands": [{"command": "workbench.action.navigateBack"}]
    },
    // Rename
    {
      "before": ["<leader>", "r", "r"],
      "commands": [{"command": "editor.action.rename"}]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": [{"command": "editor.action.rename"}]
    },
    // File structure
    {
      "before": ["<leader>", "0"],
      "commands": [{"command": "workbench.action.gotoSymbol"}]
    },
    // Close
    {
      "before": ["<leader>", "x"],
      "commands": [{"command": "workbench.action.closeActivePinnedEditor"}]
    },
    // Buffer management
    {
      "before": ["<leader>", "b", "p"],
      "commands": [{"command": "workbench.action.pinEditor"}]
    },
    {
      "before": ["<leader>", "b", "u"],
      "commands": [{"command": "workbench.action.unpinEditor"}]
    },
    {
      "before": ["<leader>", "b", "q"],
      "commands": [{"command": "workbench.action.closeOtherEditors"}]
    },
    // Search
    {
      "before": ["<leader>", "f", "f"],
      "commands": [{"command": "workbench.action.quickOpen"}]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": [{"command": "workbench.action.findInFiles"}]
    },
    {
      "before": ["<leader>", "f", "t"],
      "commands": [{"command": "workbench.action.showCommands"}]
    },
    {
      "before": ["<leader>", "f", "r"],
      "commands": [{"command": "workbench.action.openRecent"}]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": [{"command": "workbench.action.quickTextSearch"}]
    },
    // LSP Navigation
    {
      "before": ["g", "d"],
      "commands": [{"command": "editor.action.revealDefinition"}]
    },
    {
      "before": ["g", "r"],
      "commands": [{"command": "references-view.find"}]
    },
    {
      "before": ["g", "D"],
      "commands": [{"command": "editor.action.revealDeclaration"}]
    },
    {
      "before": ["g", "i"],
      "commands": [{"command": "editor.action.goToImplementation"}]
    },
    {
      "before": ["<leader>", "u"],
      "commands": [{"command": "references-view.find"}]
    },
    {
      "before": ["<leader>", "i"],
      "commands": [{"command": "editor.action.goToImplementation"}]
    },
    // Test navigation
    {
      "before": ["<leader>", "o", "t"],
      "commands": [{"command": "workbench.action.gotoSymbol"}]
    },
    {
      "before": ["<leader>", "T"],
      "commands": [{"command": "workbench.action.debug.run"}]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Tab>"],
      "commands": [{"command": "workbench.action.nextEditorInGroup"}]
    },
    {
      "before": ["<S-Tab>"],
      "commands": [{"command": "workbench.action.previousEditorInGroup"}]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-s>"],
      "commands": [{"command": "editor.action.triggerParameterHints"}]
    }
  ],
  "vim.statusBarColorControl": true,

  // vim features
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.highlightedyank.enable": true,
  "vim.scrolloff": 5,
"extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
},
"editor.minimap.enabled": false,
"editor.scrollbar.verticalScrollbarSize": 4,
"editor.scrollbar.horizontalScrollbarSize": 4,
"editor.cursorSurroundingLines": 5
}
