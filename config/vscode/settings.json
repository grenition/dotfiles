{
  // core
  "files.eol": "\n",
  "http.proxyStrictSSL": false,
  "redhat.telemetry.enabled": false,

  // editor
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "line",
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 100,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "editor.tabFocusMode": true,
  "editor.rulers": [120],
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.mouseWheelZoom": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.bracketPairColorization.enabled": true, "editor.guides.bracketPairs": "active",

  // terminal
  "terminal.integrated.tabStopWidth": 1,

  // diff
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
"diffEditor.experimental.useTrueInlineView": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.location": "bottom",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.tips.enabled": false,

  // ui colors
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
},

  // misc
  "chat.commandCenter.enabled": false,
  "github.copilot.chat.agent.currentEditorContext.enabled": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "nestor.agentMode.autoApprovableCommandsList": [],

  // window
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.density.editorTabHeight": "compact",

  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,

  // gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.recentChange.command": "gitlens.toggleFileBlame",

  // dotnet / csharp
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.useModernNet": true,
  "dotnet.formatting.organizeImportsOnFormat": true,
  "[csharp]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
  },

  // json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // emmet
  "emmet.triggerExpansionOnTab": true,

  // vim core
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.vimrc",
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.statusBarColorControl": true,

  // vim features
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.surround": true,
"vim.highlightedyank.enable": true,
"extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
}
}