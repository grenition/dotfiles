set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab
set ruler
syntax on
set mouse=a
set ignorecase
set smartcase
set incsearch
set selectmode=
set keymodel=

nnoremap U <C-r>
nnoremap <Up> 10k
nnoremap <Down> 10j
nnoremap <Left> 20h
nnoremap <Right> 20l

nnoremap <M-h> 20h
nnoremap <M-j> 10j
nnoremap <M-k> 10k
nnoremap <M-l> 20l
